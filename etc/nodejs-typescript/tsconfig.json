{
 "compilerOptions": {
    "target": "ES6",                 // 코드의 대상 버전
    "module": "CommonJS",            // Node.js의 모듈 시스템
    "rootDir": "./src",              // 소스 디렉토리
    "outDir": "./dist",              // 컴파일된 파일이 저장될 디렉토리
    "strict": true,                  // 엄격한 타입 검사
    "esModuleInterop": true,         // ES6 모듈 호환
    "skipLibCheck": true             // 타입 라이브러리 검사 건너뛰기
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
